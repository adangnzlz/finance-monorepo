{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Finance API",
        "cwd": "${workspaceFolder}/apps/finance-api", 
        "runtimeExecutable": "pnpm",
        "runtimeArgs": ["run", "dev"],
        "console": "integratedTerminal",
        "restart": true,
        "internalConsoleOptions": "neverOpen",
        "env": {
          "TS_NODE_TRANSPILE_ONLY": "true",
          "NODE_ENV": "development"
        }
      }
    ]
  }
  